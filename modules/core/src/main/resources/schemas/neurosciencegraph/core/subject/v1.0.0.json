{
  "@context": [
    "{{base}}/contexts/neurosciencegraph/core/schema/v0.1.0",
    {
      "this": "{{base}}/schemas/neurosciencegraph/core/subject/v1.0.0/shapes/"
    }
  ],
  "@type": "nxv:Schema",
  "imports": [
    "{{base}}/schemas/neurosciencegraph/commons/entity/v1.0.0",
    "{{base}}/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.4",
    "{{base}}/schemas/neurosciencegraph/commons/quantitativevalue/v0.1.2"
  ],
  "shapes": [
    {
      "@id": "this:SubjectShape",
      "@type": "sh:NodeShape",
      "label": "Subject shape definition",
      "comment": "Subject used in experiment",
      "targetClass": "nsg:Subject",
      "nodeKind": "sh:BlankNodeOrIRI",
      "and": [
        {
          "node": "{{base}}/schemas/neurosciencegraph/commons/entity/v1.0.0/shapes/EntityShape"
        },
        {
          "property": [
            {
              "path": "nsg:species",
              "name": "Species",
              "description": "The species of the subject",
              "node": "{{base}}/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.4/shapes/SpeciesOntologyTermShape",
              "minCount": 1,
              "maxCount": 1
            },
            {
              "path": "nsg:strain",
              "name": "Strain",
              "description": "Subject strain",
              "node": "{{base}}/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.4/shapes/StrainOntologyTermShape",
              "maxCount": 1
            },
            {
              "path": "nsg:transgenic",
              "name": "Transgenic",
              "description": "Transgenic modification of subject",
              "node": "{{base}}/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.4/shapes/TransgenicOntologyTermShape",
              "maxCount": 1
            },
            {
              "path": "nsg:sex",
              "name": "Sex",
              "description": "The sex of the subject",
              "node": "{{base}}/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.4/shapes/SexOntologyTermShape",
              "maxCount": 1
            },
            {
              "path": "nsg:age",
              "name": "Age",
              "description": "The age of the subject.",
              "node": "this:AgeShape",
              "maxCount": 1
            },
            {
              "path": "schema:birthDate",
              "name": "Date of birth",
              "description": "Date of birth of subject.",
              "datatype": "xsd:dateTime",
              "lessThan": "schema:deathDate",
              "maxCount": 1
            },
            {
              "path": "schema:deathDate",
              "name": "Date of sacrifice",
              "description": "Date of sacrifice of subject.",
              "datatype": "xsd:dateTime",
              "maxCount": 1
            },
            {
              "path": "nsg:dateOfSurgery",
              "name": "Date of surgery",
              "description": "Date of surgery of subject.",
              "datatype": "xsd:dateTime",
              "maxCount": 1
            },
            {
              "path": "nsg:diseaseModel",
              "name": "Disease",
              "description": "Disease modeled in subject.",
              "node": "{{base}}/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.4/shapes/DiseaseModelOntologyTermShape",
              "maxCount": 1
            },
            {
              "path": "nsg:disease",
              "name": "Disease",
              "description": "Disease of subject.",
              "node": "{{base}}/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.4/shapes/DiseaseOntologyTermShape",
              "maxCount": 1
            },
            {
              "path": "nsg:treatment",
              "name": "Treatment",
              "description": "Treatment of the subject.",
              "node": "{{base}}/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.4/shapes/TreatmentOntologyTermShape",
              "maxCount": 1
            },
            {
              "path": "schema:weight",
              "name": "Weight",
              "description": "Weight of the subject.",
              "node": "{{base}}/schemas/neurosciencegraph/commons/quantitativevalue/v0.1.2/shapes/QuantitativeValueShape",
              "maxCount": 1
            }
          ]
        }
      ]
    },
    {
      "@id": "this:AgeShape",
      "@type": "sh:NodeShape",
      "property": [
        {
          "path": "nsg:period",
          "name": "Period",
          "in": [
            "Pre-natal",
            "Post-natal"
          ],
          "minCount": 1,
          "maxCount": 1
        },
        {
          "path": "schema:value",
          "name": "Age value",
          "node": "{{base}}/schemas/neurosciencegraph/commons/quantitativevalue/v0.1.2/shapes/QuantitativeValueShape",
          "minCount": 1,
          "maxCount": 1
        }
      ]
    }
  ]
}