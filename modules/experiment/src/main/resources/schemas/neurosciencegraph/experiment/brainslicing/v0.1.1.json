{
  "@context": [
    "{{base}}/contexts/neurosciencegraph/core/schema/v0.1.0",
    {
      "this": "{{base}}/schemas/neurosciencegraph/experiment/brainslicing/v0.1.0/shapes/"
    }
  ],
  "imports": [
    "{{base}}/schemas/neurosciencegraph/commons/activity/v0.1.3",
    "{{base}}/schemas/neurosciencegraph/commons/brainlocation/v0.1.1"
  ],
  "@type": "nxv:Schema",
  "shapes": [
    {
      "@id": "this:BrainSlicingShape",
      "@type": "sh:NodeShape",
      "label": "Brain slicing shape definition",
      "nodeKind": "sh:BlankNodeOrIRI",
      "targetClass": "nsg:BrainSlicing",
      "and": [
        {
          "node": "{{base}}/schemas/neurosciencegraph/commons/activity/v0.1.3/shapes/ActivityShape"
        },
        {
          "property": [
            {
              "path": "prov:used",
              "description": "The subject used",
              "class": "nsg:Subject",
              "minCount": 1,
              "maxCount": 1
            },
            {
              "path": "prov:generated",
              "description": "The slice or slice collection generated",
              "class": "nsg:SliceCollection",
              "minCount": 1
            },
            {
              "path": "nsg:brainLocation",
              "name": "Brain location",
              "description": "Brain location information",
              "node": "{{base}}/schemas/neurosciencegraph/commons/brainlocation/v0.1.1/shapes/BrainLocationShape"
            },
            {
              "path": "nsg:slicingPlane",
              "name": "Slicing plane",
              "description": "Slicing plane of the brain",
              "in": [
                "Sagittal",
                "Para-sagittal",
                "Coronal",
                "Horizontal"
              ],
              "maxCount": 1
            },
            {
              "path": "nsg:slicingAngle",
              "name": "Slicing angle",
              "description": "Slicing angle of brain",
              "datatype": "xsd:string",
              "maxCount": 1
            },
            {
              "path": "nsg:cuttingThickness",
              "name": "Cutting thickness",
              "description": "Cutting thickness of brain slice",
              "node": "{{base}}/schemas/neurosciencegraph/commons/quantitativevalue/v0.1.0/shapes/QuantitativeValueShape",
              "maxCount": 1
            },
            {
              "path": "nsg:brainHemisphere",
              "name": "Hemisphere",
              "description": "Brain hemisphere that was sliced",
              "in": [
                "Left",
                "Right"
              ],
              "maxCount": 2
            },
            {
              "path": "nsg:solution",
              "name": "Solution",
              "description": "Solution in which the brain was sliced",
              "datatype": "xsd:string",
              "maxCount": 1
            }
          ]
        }
      ]
    }
  ]
}