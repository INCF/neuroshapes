{
  "@context": [
    "{{base}}/contexts/neurosciencegraph/core/schema/v0.1.0",
    {
      "this": "{{base}}/schemas/neurosciencegraph/experiment/subjectcollection/0.1.0/shapes/"
    }
  ],
  "@type": "nxv:Schema",
  "imports": [
    "{{base}}/schemas/neurosciencegraph/core/collection/v0.1.0",
    "{{base}}/schemas/neurosciencegraph/commons/labeledontologyentity/v0.1.0"
  ],
  "shapes": [
    {
      "@id": "this:SubjectCollectionShape",
      "@type": "sh:NodeShape",
      "label": "Subject Collection",
      "comment": "All subjects in the collection should be of the same species.",
      "targetClass": "nsg:Collection",
      "and": [
        {
          "node": "{{base}}/schemas/neurosciencegraph/core/collection/v0.1.0/shapes/CollectionShape"
        },
        {
          "property": [
            {
              "path": "nsg:species",
              "name": "Species",
              "description": "The species of this collection members",
              "node": "{{base}}/schemas/neurosciencegraph/commons/labeledontologyentity/v0.1.0/shapes/LabeledOntologyEntityShape",
              "maxCount": 1,
              "minCount": 1
            },
            {
              "path": "prov:hadMember",
              "name": "Member",
              "description": "The subject (s) that are member of the collection.",
              "class": "nsg:Subject",
              "seeAlso": "{{base}}/schemas/neurosciencegraph/core/subject/v0.1.0/shapes/SubjectShape"
            }
          ]
        }
      ]
    }
  ]
}

