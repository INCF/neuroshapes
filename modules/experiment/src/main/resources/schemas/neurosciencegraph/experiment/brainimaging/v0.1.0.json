{
  "@context": [
    "{{base}}/contexts/neurosciencegraph/core/schema/v0.1.0",
    {
      "this": "{{base}}/schemas/neurosciencegraph/experiment/brainimaging/v0.1.0/shapes/"
    }
  ],
  "@type": "nxv:Schema",
  "imports": [
    "{{base}}/schemas/neurosciencegraph/commons/activity/v0.1.4"
  ],
  "shapes": [
    {
      "@id": "this:BrainImagingShape",
      "@type": "sh:NodeShape",
      "label": "Brain imaging shape definition",
      "targetClass": "nsg:BrainImaging",
      "nodeKind": "sh:BlankNodeOrIRI",
      "and": [
        {
          "node": "{{base}}/schemas/neurosciencegraph/commons/activity/v0.1.4/shapes/ActivityShape"
        },
        {
          "property": [
            {
              "path": "nsg:imagingMethod",
              "name": "Imaging method",
              "description": "Method used for brain imaging.",
              "datatype": "xsd:string",
              "maxCount": 1
            },
            {
              "path": "prov:used",
              "name": "Subject",
              "description": "Subject used for brain imaging.",
              "class": "nsg:Subject",
              "maxCount": 1             
            },
            {
              "path": "prov:generated",
              "name": "ImageStack",
              "description": "ImageStack generated by brain imaging.",
              "class": "nsg:ImageStack",
              "maxCount": 1             
            }
          ]
        }
      ]
    }
  ]
}
