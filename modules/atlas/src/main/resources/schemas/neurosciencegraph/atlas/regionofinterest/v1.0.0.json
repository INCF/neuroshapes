{
  "@context": [
    "{{base}}/contexts/neurosciencegraph/core/schema/v0.1.0",
    {
      "this": "{{base}}/schemas/neurosciencegraph/atlas/regionofinterest/v1.0.0/shapes/"
    }
  ],
  "imports": [
    "{{base}}/schemas/neurosciencegraph/commons/entity/v1.0.0",
    "{{base}}/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.4"
  ],
  "@type": "nxv:Schema",
  "shapes": [
    {
      "@id": "this:RegionOfInterestShape",
      "@type": "sh:NodeShape",
      "label": "Region of interest.",
      "nodeKind": "sh:BlankNodeOrIRI",
      "targetClass": "nsg:RegionOfInterest",
      "and": [
        {
          "node": "{{base}}/schemas/neurosciencegraph/commons/entity/v1.0.0/shapes/EntityShape"
        },
        {
          "property": [
            {
              "path": "nsg:geometry",
              "name": "Geometry",
              "description": "The geometric shape of the region of interest.",
              "node": "this:GeometricShapeShape",
              "minCount": 1,
              "maxCount": 1
            },
            {
              "path": "nsg:location",
              "name": "Location",
              "description": "The location of the region of interest.",
              "node": "this:BrainLocationShape",
              "minCount": 1,
              "maxCount": 1
            }
          ]
        }
      ]
    },
    {
      "@id": "this:GeometricShapeShape",
      "@type": "sh:NodeShape",
      "label": "The shape of a  geometry node.",
      "targetObjectsOf": "nsg:geometry",
      "class": "nsg:GeometricShape",
      "property": [
        {
          "path": "nsg:geometryParameter",
          "name": "Parameters",
          "node": "this:GeometryParameterShape",
          "minCount": 1,
          "maxCount": 1
        }
      ]
    },
    {
      "@id": "this:GeometryParameterShape",
      "@type": "sh:NodeShape",
      "label": "The shape of a geometry parameter.",
      "targetObjectsOf": "nsg:geometryParameter",
      "property": [
        {
          "path": "nsg:spatialReferenceSystem",
          "name": "Spatial Reference System",
          "class": "nsg:SpatialReferenceSystem",
          "minCount": 1,
          "maxCount": 1
        }
      ]
    },
    {
      "@id": "this:BrainLocationShape",
      "@type": "sh:NodeShape",
      "label": "A brain location shape.",
      "property": [
        {
          "path": "nsg:brainRegion",
          "name": "Brain region",
          "description": "Brain region",
          "node": "{{base}}/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.4/shapes/BrainRegionOntologyTermShape",
          "minCount": 1
        }
      ]
    }
  ]
}