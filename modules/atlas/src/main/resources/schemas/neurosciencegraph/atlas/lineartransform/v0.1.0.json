{
  "@context": [
    "{{base}}/contexts/neurosciencegraph/core/schema/v0.1.0",
    {
      "this": "{{base}}/schemas/neurosciencegraph/atlas/lineartransform/v0.1.0/shapes/"
    }
  ],
  "@type": "nxv:Schema",
  "import": [
    "{{base}}/schemas/neurosciencegraph/commons/entity/v0.1.0",
    "{{base}}/schemas/neurosciencegraph/atlas/transform/v0.1.0"
  ],
  "shapes": [
    {
      "@id": "this:LinearTransformShape",
      "@type": "sh:NodeShape",
      "description": "Linear transform including rigid and affine transform, described by a 3x4 matrix",
      "nodeKind": "sh:BlankNodeOrIRI",
      "targetClass": "nsg:LinearTransform",
      "and": [
        {
          "node": "{{base}}/schemas/neurosciencegraph/atlas/transform/v0.1.0/shapes/EntityShape"
        },
        {
          "property": [
            {
              "path": "nsg:LinearTransformType",
              "in": [
                "rigid",
                "affine"
              ],
              "maxCount": 1
            }
          ]
        }
      ]
    }
  ]
}