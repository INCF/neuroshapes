{
  "@context": [
    "{{base}}/contexts/neurosciencegraph/core/schema/v0.1.0",
    {
      "this": "{{base}}/schemas/neurosciencegraph/simulation/pointneuronnetwork/v0.1.0/shapes/"
    }
  ],
  "@type": "nxv:Schema",
  "imports": [
    "{{base}}/schemas/neurosciencegraph/commons/entity/v1.0.0"
  ],
  "shapes": [
    {
      "@id": "this:PointNeuronNetworkShape",
      "@type": "sh:NodeShape",
      "label": "Point neuron network.",
      "targetClass": "nsg:PointNeuronNetwork",
      "nodekind": "sh:BlankNodeOrIRI",
      "and": [
        {
          "node": "{{base}}/schemas/neurosciencegraph/commons/entity/v1.0.0/shapes/EntityShape"
        },
        {
          "property": [
            {
              "path": "schema:name",
              "name": "Name",
              "description": "Point neuron network name.",
              "datatype": "xsd:string",
              "minCount": 1,
              "maxCount": 1
            },
            {
              "path": "schema:description",
              "name": "Description",
              "description": "Point neuron network description.",
              "datatype": "xsd:string",
              "maxCount": 1
            },
            {
              "path": "nsg:neuronModels",
              "name": "Neuron Models",
              "description": "Collection of point neuron models used in the network.",
              "class": "nsg:PointNeuronModel",
              "minCount": 1
            },
            {
              "path": "nsg:synapseModels",
              "name": "Synapse Models",
              "description": "Collection of point neuron synapse models used in the network.",
              "class": "nsg:PointNeuronSynapseModel",
              "minCount": 1
            },
            {
              "path": "schema:distribution",
              "name": "Distribution",
              "description": "Serialized representation of the network(ex. Sonata).",
              "node": "{{base}}/schemas/nexus/core/distribution/v0.1.0/shapes/DistributionShape"
            }
          ]
        }
      ]
    }
  ]
}
