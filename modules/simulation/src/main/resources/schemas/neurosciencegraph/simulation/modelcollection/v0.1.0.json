                    {
                        "class": "nsg:ModelInstance"
                    },
                    {
                        "class":  "nsg:MEModel"
                    }
                ],
                "seeAlso": ["{{base}}/schemas/neurosciencegraph/simulation/modelinstance/v0.1.2/shapes/ModelInstanceShape",
