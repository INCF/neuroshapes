{
  "@context": [
    "{{base}}/contexts/neurosciencegraph/core/schema/v0.1.0",
    {
      "this": "{{base}}/schemas/neurosciencegraph/simulation/simulation/v0.1.0/shapes/"
    }
  ],
  "@type": "nxv:Schema",
  "imports": [
    "{{base}}/schemas/neurosciencegraph/commons/activity/v0.1.0",
    "{{base}}/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.0"
  ],
  "shapes": [
    {
      "@id": "this:DetailedCircuitSimulationShape",
      "@type": "sh:NodeShape",
      "label": "Model simulation activity shape",
      "comment": "Query: Get all simulation that generates a voltage trace layer 5",
      "nodekind": "sh:BlankNodeOrIRI",
      "targetClass": "nsg:Simulation",
      "and": [
        {
          "node": "{{base}}/schemas/neurosciencegraph/commons/activity/v0.1.0/ActivityShape"
        },
        {
          "property": [
            {
              "path": "prov:used",
              "name": "Model",
              "description": "Used model.",
              "seeAlso": "{{base}}/schemas/neurosciencegraph/simulation/modelinstance/v0.1.0/shapes/ModelInstanceShape",
              "class": "nsg:Model",
              "minCount": 1
            },
            {
              "path": "prov:used",
              "name": "Configuration",
              "description": "Used configuration.",
              "seeAlso": "{{base}}/schemas/neurosciencegraph/commons/entity/v0.1.0/shapes/EntityShape",
              "class": "nsg:Configuration",
              "minCount": 1
            },
            {
              "path": "nsg:status",
              "name": "Status",
              "description": "Simulation status.",
              "seeAlso": "{{base}}/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.0/shapes/ModelSimulationStatusOntologyTermShape",
              "datatype": "nsg:SimulationStatus",
              "minCount": 1
            },
            {
              "path": "prov:generated",
              "name": "Generated report",
              "description": "Generated variable report (file attached (bbp, h5, nwb), variable name, target taken from (to be controlled) [compartment, soma, summation, extra cellular recording])),",
              "seeAlso": "{{base}}/schemas/neurosciencegraph/simulation/variablereport/v0.1.0/shapes/VariableReportShape",
              "class": "nsg:VariableReport",
              "minCount": 1
            }
          ]
        }
      ]
    }
  ]
}