{
  "@context": [
    "{{base}}/contexts/neurosciencegraph/core/schema/v0.1.0",
    {
      "this": "{{base}}/schemas/neurosciencegraph/simulation/simulation/v0.1.2/shapes/"
    }
  ],
  "@type": "nxv:Schema",
  "imports": [
    "{{base}}/schemas/neurosciencegraph/commons/activity/v0.1.4",
    "{{base}}/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.2"
  ],
  "shapes": [
    {
      "@id": "this:SimulationShape",
      "@type": "sh:NodeShape",
      "label": "Model simulation activity shape",
      "comment": "Query: Get all simulation that generates a voltage trace layer 5",
      "nodekind": "sh:BlankNodeOrIRI",
      "targetClass": "nsg:Simulation",
      "and": [
        {
          "node": "{{base}}/schemas/neurosciencegraph/commons/activity/v0.1.4/ActivityShape"
        },
        {
          "property": [
            {
              "path": "prov:used",
              "minCount": 2
            },
            {
              "path": "prov:used",
              "name": "Model",
              "description": "Used model.",
              "sh:qualifiedValueShape": {
                "class": "nsg:ModelInstance"
              },
              "qualifiedValueShapesDisjoint": true,
              "qualifiedMinCount": 1,
              "qualifiedMaxCount": 1,
              "seeAlso": "{{base}}/schemas/neurosciencegraph/simulation/modelinstance/v0.1.2/shapes/ModelInstanceShape"
            },
            {
              "path": "prov:used",
              "name": "Configuration",
              "description": "Used configuration.",
              "sh:qualifiedValueShape": {
                "class": "nsg:Configuration"
              },
              "qualifiedValueShapesDisjoint": true,
              "qualifiedMinCount": 1,
              "qualifiedMaxCount": 1,
              "seeAlso": "{{base}}/schemas/neurosciencegraph/commons/entity/v1.0.0/shapes/EntityShape"
            },
            {
              "path": "nsg:status",
              "name": "Status",
              "description": "Simulation status.",
              "datatype": "nsg:SimulationStatus",
              "minCount": 1,
              "seeAlso": "{{base}}/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.2/shapes/ModelSimulationStatusOntologyTermShape"
            },
            {
              "path": "prov:generated",
              "name": "Generated report",
              "description": "Generated variable report (file attached (bbp, h5, nwb), variable name, target taken from (to be controlled) [compartment, soma, summation, extra cellular recording])),",
              "class": "nsg:VariableReport",
              "minCount": 1,
              "seeAlso": "{{base}}/schemas/neurosciencegraph/simulation/variablereport/v0.1.1/shapes/VariableReportShape"
            }
          ]
        }
      ]
    }
  ]
}
