{
  "@context": [
    "{{base}}/contexts/neurosciencegraph/core/schema/v0.1.0",
    {
      "this": "{{base}}/schemas/neurosciencegraph/simulation/simulation/v0.2.3/shapes/"
    }
  ],
  "@type": "nxv:Schema",
  "imports": [
    "{{base}}/schemas/neurosciencegraph/commons/activity/v0.1.4"
  ],
  "shapes": [
    {
      "@id": "this:SimulationShape",
      "@type": "sh:NodeShape",
      "label": "Model simulation activity shape",
      "comment": "Query: Get all simulation that generates a voltage trace layer 5",
      "nodekind": "sh:BlankNodeOrIRI",
      "targetClass": "nsg:Simulation",
      "and": [
        {
          "node": "{{base}}/schemas/neurosciencegraph/commons/activity/v0.1.4/shapes/ActivityShape"
        },
        {
          "property": [
            {
              "path": "prov:used",
              "description": "Used model and configuration.",
              "nodeKind": "sh:IRI",
              "minCount": 2
            },
            {
              "path": "prov:generated",
              "name": "Generated report",
              "description": "Generated variable report (file attached (bbp, h5, nwb), variable name, target taken from (to be controlled) [compartment, soma, summation, extra cellular recording])),",
              "class": "nsg:VariableReport",
              "minCount": 1,
              "seeAlso": "{{base}}/schemas/neurosciencegraph/simulation/variablereport/v0.1.2/shapes/VariableReportShape"
            }
          ]
        }
      ]
    }
  ]
}
